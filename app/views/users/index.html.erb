<div class="main">

  <ul class="users">

    <%@users.each do |user|%>

    <li class="user">

      <div class="user-img">
        <img alt="<%= user.name %>'s photo" src=<%=user.photo%>>
      </div>


      <div class='user_item'>
        <%=link_to "/users/#{user.id}",class: 'user-link', :action => 'go' do%>
        <h2>User <%= user.name %></h2>
        <% end %>
        <p class='posts-count'>Number of posts : <%= user.posts_counter %></p>
      </div>

    </li>
    <%end%>

  </ul>

  <%=link_to "/users/1/posts/new",class: "new-form-btn", :action => 'go' do%>
  <button class="button">New Post</button>
  <%end%>
</div>